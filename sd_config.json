{
  "source": ["src/tokens/data.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "files": [
        {
          "format": "css/variables",
          "destination": "src/tokens/design-tokens.css"
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "files": [
        {
          "format": "scss/variables",
          "destination": "src/tokens/design-tokens.scss"
        }
      ]
    },
    "js": {
      "transformGroup": "js",
      "files": [
        {
          "format": "javascript/object",
          "name": "tokens",
          "destination": "src/tokens/tokens.js"
        }
      ]
    }
  }
}
